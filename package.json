{
  "name": "servicedeskai",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "front/*",
    "back/*",
    "back",
    "front",
    "db"
  ],
  "packageManager": "npm@10.0.0",
  "scripts": {
	"predev": "docker-compose up -d db",
	"scripts": "tsx ./run-scripts",
    "start": "npm run scripts -- start",
	"dev": "npm run scripts -- dev",
	"docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:start": "docker-compose build && docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/prompts": "^2.4.9",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "prompts": "^2.4.2",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
